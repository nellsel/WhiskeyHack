<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.whiskey.rest.Cask" table="Cask" catalog="mydb">
        <id name="caskId" type="java.lang.Integer">
            <column name="CaskId" />
            <generator class="identity" />
        </id>
        <property name="KeepOrBuy" column="KeepOrBuy" type="int" />
        <property name="TimeInUse" column="TimeInUse" type="string" />
    </class>
</hibernate-mapping>